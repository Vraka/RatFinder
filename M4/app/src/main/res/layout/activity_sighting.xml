<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">


    <TextView
        android:id="@+id/uniquekey"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="70"
        android:gravity="center"
        android:text="Unique Key:"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="70"
        android:gravity="center"
        android:text="Created Date:"
        android:textAlignment="center"
        android:layout_below="@+id/uniquekey"
        />

    <TextView
        android:id="@+id/loctype"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="70"
        android:gravity="center"
        android:text="Location Type:"
        android:textAlignment="center"
        android:layout_below="@+id/date"
        />

    <TextView
        android:id="@+id/zip"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="70"
        android:gravity="center"
        android:text="Zip Code:"
        android:textAlignment="center"
        android:layout_below="@+id/loctype"
        />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="70"
        android:gravity="center"
        android:text="Address:"
        android:textAlignment="center"
        android:layout_below="@+id/zip"
        />

    <TextView
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="70"
        android:gravity="center"
        android:text="City:"
        android:textAlignment="center"
        android:layout_below="@+id/address"
        />

    <TextView
        android:id="@+id/borough"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="70"
        android:gravity="center"
        android:text="Borough:"
        android:textAlignment="center"
        android:layout_below="@+id/city"
        />

    <TextView
        android:id="@+id/latitude"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="70"
        android:gravity="center"
        android:text="Latitude:"
        android:textAlignment="center"
        android:layout_below="@+id/borough"
        />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="70"
        android:gravity="center"
        android:text="Longitude:"
        android:textAlignment="center"
        android:layout_below="@+id/latitude"
        />

</RelativeLayout>



